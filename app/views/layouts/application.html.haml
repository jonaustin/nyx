!!! 5
%html(ng-app='musicApp' lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Nyx"
    = csrf_meta_tags
    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag :application, :media => "all"
    = yield :page_css
    = javascript_include_tag :application
    = yield :page_js

  %body
    %header
      = render 'shared/navigation'
    %main{:role => "main"}
      %div#flash_messages
        = render 'shared/messages'
      = yield

    %footer
      .text-center
        %p
          &copy; Jon Austin
          = Date.today.year
  = render 'peek/bar'
