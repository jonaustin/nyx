.authform.wide
  = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, role: 'form'}) do |f|
    %h3 Resend unlock instructions
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, :autofocus => true, class: 'form-control'
    = f.submit 'Resend unlock instructions', :class => 'button right'
